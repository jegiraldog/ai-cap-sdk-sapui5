<mvc:View controllerName="com.globant.aichat.aichatpdfui5.controller.Home"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Page id="page" title="{i18n>title}">
        <content>
            <VBox class="sapUiMediumMargin">
                <Label text="Seleccionar Modelo AI:" class="sapUiSmallMarginBottom"/>
                <ComboBox 
                    id="modelComboBox"
                    placeholder="Seleccionar modelo AI..."
                    items="{viewModel>/availableModels}"
                    selectedKey="{viewModel>/selectedModelId}">
                    <core:Item key="{viewModel>id}" text="{viewModel>name}" />
                </ComboBox>
            </VBox>
        </content>
    </Page>
</mvc:View>
